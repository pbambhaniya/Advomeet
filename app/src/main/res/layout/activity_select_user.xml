<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnr_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/app_logo"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="1dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lnr_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr_top"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_select_lawyer"
            android:layout_width="172dp"
            android:layout_height="42dp"
            android:background="@drawable/bg_btn_white"
            android:elevation="10dp"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_select_lawyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="Lawyer"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:src="@mipmap/ic_trajvu" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_select_user"
            android:layout_width="172dp"
            android:layout_height="42dp"
            android:layout_below="@+id/rel_select_lawyer"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_btn_white"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_select_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="User"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:gravity="right"
                android:src="@mipmap/ic_user_icon" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>